<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/common_tool_bar</item>
    </style>
    <style name="common_tool_bar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <!-- 自定义dialog -->
    <style name="custom_dialog_version" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_14sp_gray9">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_9</item>
    </style>

    <style name="style_translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/alpha_0.8_black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
