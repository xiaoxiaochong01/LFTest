<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/client_list_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/layout_bg_gray_f4"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_client_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg_gray_fa"
        app:tabIndicatorColor="@color/orange"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/gray_3"
        app:tabTextAppearance="@style/text_14sp_gray9">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_client_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    </android.support.v4.view.ViewPager>

</android.support.v7.widget.LinearLayoutCompat>