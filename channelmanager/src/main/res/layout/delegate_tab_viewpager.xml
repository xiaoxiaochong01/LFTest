<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.longfor.channelmanager.common.view.CommonHeadView
        android:id="@+id/header_tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

    </com.longfor.channelmanager.common.view.CommonHeadView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:tabIndicatorColor="@color/orange"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/gray_3"
        app:tabTextAppearance="@style/text_14sp_gray9">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    </android.support.v4.view.ViewPager>

</android.support.v7.widget.LinearLayoutCompat>