<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_f8"
    android:orientation="vertical">
    <!-- 标头栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:id="@+id/tv_project_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_arrow_down_s"
            android:text="长城原著"
            android:textColor="@color/gray_3"
            android:textSize="15sp"
            android:maxEms="7"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textColor="@color/gray_3"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_group_unread_meg"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/home_message_icon" />

            <ImageView
                android:id="@+id/img_message_dot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_above="@+id/img_message"
                android:layout_toRightOf="@+id/img_message"
                android:src="@mipmap/icon_red_dot"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_e0"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/sv_group_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <!--<com.youth.banner.Banner-->
                    <!--app:indicator_drawable_selected="@mipmap/icon_point_true"-->
                    <!--app:indicator_drawable_unselected="@mipmap/icon_point_false"-->
                    <!--app:indicator_width="8dp"-->
                    <!--app:indicator_height="8dp"-->
                    <!--app:indicator_margin="3dp"-->
                    <!--app:banner_default_image="@mipmap/default_banner"-->
                    <!--app:image_scale_type="center_crop"-->
                    <!--android:id="@+id/banner"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="170dp" />-->

                <!--<com.longfor.channelmanager.views.ListViewForScrollView-->
                    <!--android:id="@+id/lv_features"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:divider="@color/transparent"-->
                    <!--android:scrollbars="none"-->
                    <!--android:listSelector="@color/transparent"-->
                    <!--&gt;-->

                <!--</com.longfor.channelmanager.views.ListViewForScrollView>-->

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/ll_group_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <ExpandableListView
                android:id="@+id/elv_project_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:dividerHeight="0.5dp"
                android:divider="@color/gray_e"
                android:childDivider="@color/gray_e"
                >

            </ExpandableListView>

            <Button
                android:id="@+id/btn_out_project_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#99000000"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>