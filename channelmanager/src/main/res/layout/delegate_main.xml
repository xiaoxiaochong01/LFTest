<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="这是主页面"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:text="@string/logout_string"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_test_toast1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_logout"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:text="测试toastA"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_test_toast2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_test_toast1"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:text="测试toastB"
        />
</RelativeLayout>
